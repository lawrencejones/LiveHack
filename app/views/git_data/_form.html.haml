= form_for(@git_datum) do |f|
  - if @git_datum.errors.any?
    #error_explanation
      %h2
        = pluralize(@git_datum.errors.count, "error")
        prohibited this git_datum from being saved:
      %ul
        - @git_datum.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user
    %br/
    = f.text_field :user
  .field
    = f.label :repo
    %br/
    = f.text_field :repo
  .field
    = f.label :time
    %br/
    = f.text_field :time
  .actions
    = f.submit