= form_for(@hackathon) do |f|
  - if @hackathon.errors.any?
    #error_explanation
      %h2
        = pluralize(@hackathon.errors.count, "error")
        prohibited this hackathon from being saved:
      %ul
        - @hackathon.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    <label for="hackathon_desc">Short Description</label>
    = f.text_field :desc
  .field
    = f.label :start
    = f.text_field :start
  .field
    = f.label :end
    = f.text_field :end
  .field
    = f.label :location
    = f.text_field :location
  .field
    <label for="hackathon_scheduleItems">Scheduled Items (ID's)</label>
    = f.text_field :scheduleItems