.container
  .jumbotron
    %h1 LiveHack!
    %h2 00:00
    %p 
      Access your hackathon below, or create a new hackathon 
      <a href="#new-hack-modal" role="button" data-toggle="modal">here</a>.
  .span12{:style => 'margin-left:0'}
    %table.table.table-hover.table-striped.table-bordered{:style => 'width:100%'}
      %tbody#hackathon_list
        %tr
          %th Name
          %th Description
          %th Location
        - @hackathons.each do |hackathon|
          %tr.minor
            %td.hackathon_name
              = hackathon.name
            %td.hackathon_desc
              = hackathon.desc
            %td.hackathon_location
              = hackathon.location

= render 'new_hack_modal'