= form_for(@user, :remote => true, :html => { :style => 'margin-bottom:0px;' }) do |f|
  .modal-body.no-margin
    .field
      = f.label :username
      = f.text_field :username
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :email
      = f.text_field :email
  .modal-footer
    %button.btn{:'data-dismiss' => 'modal', :'aria-hidden' => 'true'} Cancel
    = f.button :Submit, :class => 'btn btn-primary'
